<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">餐廳名稱：</label>
          <input type="text" id="name" placeholder="餐廳名稱" name="name" value="{{restaurant.name}}">
        </div>
        <div class="form-group">
          <label for="name_en">餐廳名稱（英文）：</label>
          <input type="text" id="name_en" placeholder="Restaurant Name in English" name="name_en"
            value="{{restaurant.name_en}}">
        </div>
        <div class="form-group">
          <label for="category">類別：</label>
          <select id="category" name="category">
            <option value="" {{#unless restaurant.category}}selected{{/unless}}>選擇類別</option>
            <option value="中東料理" {{#if (eq restaurant.category "中東料理" )}}selected{{/if}}>中東料理</option>
            <option value="日本料理" {{#if (eq restaurant.category "日本料理" )}}selected{{/if}}>日本料理</option>
            <option value="義式餐廳" {{#if (eq restaurant.category "義式餐廳" )}}selected{{/if}}>義式餐廳</option>
            <option value="美式" {{#if (eq restaurant.category "美式" )}}selected{{/if}}>美式</option>
            <option value="酒吧" {{#if (eq restaurant.category "酒吧" )}}selected{{/if}}>酒吧</option>
            <option value="咖啡" {{#if (eq restaurant.category "咖啡" )}}selected{{/if}}>咖啡</option>
          </select>
        </div>
        <div class="form-group">
          <label for="area">地區：</label>
          <select id="area" name="area">
            <option value="" {{#unless restaurant.area}}selected{{/unless}}>選擇類別</option>
            <option value="臺北市" {{#if (eq restaurant.area "臺北市" )}}selected{{/if}}>臺北市</option>
            <option value="新北市" {{#if (eq restaurant.area "新北市" )}}selected{{/if}}>新北市</option>
            <option value="桃園市" {{#if (eq restaurant.area "桃園市" )}}selected{{/if}}>桃園市</option>
            <option value="臺中市" {{#if (eq restaurant.area "臺中市" )}}selected{{/if}}>臺中市</option>
            <option value="臺南市" {{#if (eq restaurant.area "臺南市" )}}selected{{/if}}>臺南市</option>
            <option value="高雄市" {{#if (eq restaurant.area "高雄市" )}}selected{{/if}}>高雄市</option>
            <option value="六都以外" {{#if (eq restaurant.area "六都以外" )}}selected{{/if}}>六都以外</option>
          </select>
        </div>
        <div class="form-group">
          <label for="image">餐廳圖片（非必填）：</label>
          <input type="url" id="image" placeholder="餐廳圖片 URL" name="image" value="{{restaurant.image}}">
        </div>
        <div class="form-group">
          <label for="location">地址：</label>
          <input type="text" id="location" placeholder="台北市羅斯福路一段 1 巷 1 號" name="location"
            value="{{restaurant.location}}">
        </div>
        <div class="form-group">
          <label for="phone">電話：</label>
          <input type="text" id="phone" placeholder="02 1234 5678" name="phone" value="{{restaurant.phone}}">
        </div>
        <div class="form-group">
          <label for="google_map">Google Map（非必填）：</label>
          <input type="url" id="google_map" placeholder="Google Map URL" name="google_map"
            value="{{restaurant.google_map}}">
        </div>
        <div class="form-group">
          <label for="rating">評分：</label>
          <input type="number" id="rating" placeholder="餐廳評分（1.0~5.0)" name="rating" min="1.0" max="5.0" step="0.1"
            value="{{restaurant.rating}}">
        </div>
        <div class="form-group">
          <label for="description">描述：</label>
          <textarea id="description" placeholder="餐廳描述(建議 < 100 字)"
            name="description">{{restaurant.description}}</textarea>
        </div>


        <button type="submit" class="badge rounded-pill btn btn-danger font-weight-normal">Save</button>
        <a href="/restaurants" class="badge rounded-pill bg-danger font-weight-normal no-underline">Back</a>

      </form>
    </div>
  </div>
</div>